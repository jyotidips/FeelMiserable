@model FeelMiserable.Models.SlangStore

@{
    ViewBag.Title = "WhoAreYou";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="width:900px; margin:0 auto;">


    <h2>Who Are You?</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Please Write Your Short Name(Such As: Dipjyoti)!</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-md-2">New Slangs Will Be Added By:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AddedBy, new { htmlAttributes = new { @class = "form-control", style = "width:30%", placeholder = "Enter Your Name" } })
                    @Html.ValidationMessageFor(model => model.AddedBy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enter" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
