@model IEnumerable<FeelMiserable.Models.SlangStore>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:900px; margin:0 auto;">


    <center>
        <p>
            @Html.ActionLink("Create New Slang", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddedBy)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (string.IsNullOrEmpty(item.AddedBy))
                        {
                            <span>Admin</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.AddedBy)
                        }
                    </td>
                    <td>
                        @if (item.AddedBy.Contains((string)Session["AddedBy"]))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })<span>|</span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }

                    </td>
                </tr>
            }

        </table>
    </center>
</div>
